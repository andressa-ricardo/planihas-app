generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name  String
  email String @unique
  password String 

  Code Code[]
  Auth Auth[]
  Planilha Planilha[]
}

model Code {
  id        String   @id @default(uuid())
  userId    String      @unique
  code      String
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  }

  model Auth {
  id     String    @id @default(uuid())
  userId String    @unique
  token  String    @db.Text

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Planilha {
  id        String   @id @default(uuid())
  nome      String
  tipo      String  
  data      DateTime
  valor     Decimal  @db.Decimal(10, 2)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}