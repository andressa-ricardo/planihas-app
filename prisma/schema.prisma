generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name  String
  email String @unique
  password String 

  Code Code[]
}

model Code {
  id        String   @id @default(uuid())
  userId    String      @unique
  code      String
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  }